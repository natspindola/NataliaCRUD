@model IEnumerable<Natalia.Web.ViewModels.FabricanteViewModel>

<p>
    <a class="btn btn-info" asp-action="Create">Novo Fabricante</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
            <th>
                Categoria 1
            </th>
            <th>
                Categoria 2
            </th>
            <th>
                Categoria 3
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Nome
            </td>
            <td>
                @item.Categoria1
            </td>
            <td>
                @item.Categoria2
            </td>
            <td>
                @item.Categoria3
            </td>
            <td class="text-right">
                <a class="btn btn-info" asp-controller="Fabricante" asp-action="Edit" asp-route-id="@item.Id"> Editar</a>
                <a class="btn btn-info" asp-controller="Fabricante" asp-action="Delete" asp-route-id="@item.Id"> Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>