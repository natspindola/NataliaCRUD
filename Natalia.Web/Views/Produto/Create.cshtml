@model Natalia.Web.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Novo Produto";
}


<h5>PRODUTOS</h5>
<br />
<div class="row">
    <div class="col-md-5">
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="form-group">
                <label class="control-label">NOME DO PRODUTO</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">FABRICANTE</label>
                <select  asp-for="FabricanteId" class="form-control" asp-items="@(new SelectList(Model.Fabricantes, dataValueField:"Id", dataTextField:"Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="FabricanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CATEGORIA</label>
                <select asp-for="Categoria" class="form-control" asp-items="@(new SelectList(Model.Categorias))">
                    <option></option>
                </select>
                <span asp-validation-for="FabricanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">PREÇO</label>
                <input asp-for="Preco" class="form-control" placeholder="Digite o preço" />
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>