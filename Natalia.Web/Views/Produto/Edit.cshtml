@model Natalia.Web.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Novo Produto";
}

<h3 style="padding-top: 30px">@ViewData["Title"]</h3>

<hr />


<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fabricante</label>
                <select asp-for="FabricanteId" class="form-control" asp-items="@(new SelectList(Model.Fabricantes, dataValueField:"Id", dataTextField:"Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="FabricanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Categoria</label>
                <select asp-for="Categoria" class="form-control" asp-items="@(new SelectList(Model.Categorias))">
                    <option></option>
                </select>
                <span asp-validation-for="FabricanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>